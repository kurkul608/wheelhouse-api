generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  MANAGER
  SUPER_ADMIN
}

model User {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  tgId           Int?       @unique
  username       String?
  firstName      String?
  lastName       String?
  phoneNumber    String?
  languageCode   String?
  clientId       String?
  roles          UserRole[] @default([USER])
  client_orders  Order[]    @relation("Client")
  manager_orders Order[]    @relation("Manager")
  Bucket         Bucket?
  Wishlist       Wishlist?
  updatedAt      DateTime   @updatedAt
  createdAt      DateTime   @default(now())
  Ref            Ref?       @relation(fields: [refId], references: [id])
  refId          String?    @db.ObjectId
}

model Specification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  field     String
  fieldName String
  value     String
  colorHex  String?
  carCard   CarCard  @relation(fields: [carCardId], references: [id])
  carCardId String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([field, value])
}

enum FiatAsset {
  USD
  EUR
  RUB
  BYN
  UAH
  GBP
  CNY
  KZT
  UZS
  GEL
  TRY
  AMD
  THB
  INR
  BRL
  IDR
  AZN
  AED
  PLN
  ILS
}

model CarCard {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  externalId     String?
  inStock        Boolean         @default(false)
  specifications Specification[]
  carModel       String?
  carBrand       String?
  carYear        String?
  carVin         String?
  photos         File[]
  importedPhotos String[]
  description    String
  price          String?
  currency       FiatAsset?
  isActive       Boolean
  BucketCarCard  BucketCarCard[]
  orderIds       String[]        @db.ObjectId
  orders         Order[]         @relation(fields: [orderIds], references: [id])
  wishlistIds    String[]        @db.ObjectId
  wishlists      Wishlist[]      @relation(fields: [wishlistIds], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([isActive, inStock, createdAt])
}

model File {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  domain    String
  file_size Int
  key       String
  bucket    String
  weight    Int?
  CarCard   CarCard? @relation(fields: [carCardId], references: [id])
  carCardId String?  @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  user       User      @relation("Client", fields: [userId], references: [id])
  userId     String    @db.ObjectId
  manager    User?     @relation("Manager", fields: [userId], references: [id])
  managerId  String?
  carCardIds String[]  @db.ObjectId
  carCards   CarCard[] @relation(fields: [carCardIds], references: [id])
  messageId  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Bucket {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  userId        String          @unique @db.ObjectId
  user          User            @relation(fields: [userId], references: [id])
  BucketCarCard BucketCarCard[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model BucketCarCard {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  bucketId  String   @db.ObjectId
  bucket    Bucket   @relation(fields: [bucketId], references: [id])
  carCardId String   @db.ObjectId
  carCard   CarCard  @relation(fields: [carCardId], references: [id])
  addedAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Wishlist {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  userId     String    @unique @db.ObjectId
  user       User      @relation(fields: [userId], references: [id])
  carCardIds String[]  @db.ObjectId
  carCards   CarCard[] @relation(fields: [carCardIds], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Video {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  filename  String
  fileId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ref {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  startDate DateTime?
  users     User[]
  clicks    BigInt?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model MessageTemplate {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  text String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Message   Message[]
}

model Message {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  prismaWhere Json

  messageTemplateId String          @db.ObjectId
  MessageTemplate   MessageTemplate @relation(fields: [messageTemplateId], references: [id])

  carCardsWhere Json

  status MessageStatus
  type   MessageType

  startTime DateTime

  periodType MessagePeriodType?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MessageStatus {
  ACTIVE
  DISABLED
}

enum MessageType {
  ONCE
  PERIOD
}

enum MessagePeriodType {
  EVERY_HOUR
  EVERY_DAY
  EVERY_WEEK
  EVERY_MONTH
}
